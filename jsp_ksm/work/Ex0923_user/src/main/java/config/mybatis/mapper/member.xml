<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="m">

	<select id="selectList" resultType="vo.MemberVo">
		select * from member order by idx desc
	</select>
 
                
 	<insert id="insert_member" parameterType="vo.MemberVo">
 		insert into member values(seq_member_idx.nextVal, #{name}, #{id}, #{pwd}, #{email}, #{addr})
 	</insert>
 	
 	<delete id="del_member" parameterType="int">
 		delete from member where idx=#{idx}
 	</delete>
 	
 	<select id="select_member" resultType="vo.MemberVo" parameterType="int">
 		select * from member where idx=#{idx}
 	</select>
 	
 	<update id="update_member" parameterType="vo.MemberVo">
 		update member set name=#{name}, id=#{id}, pwd=#{pwd}, email=#{email}, addr=#{addr}
 		where idx=#{idx}
 	</update>
 	
 	<select id="selectOne" resultType="vo.MemberVo" parameterType="String">
 		select * from member where id=#{id}
 	</select>

</mapper>













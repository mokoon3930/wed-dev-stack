<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="m">
		
		<select id="member_list" resultType="member">
			select * from member
		</select>
		
		<insert id="member_regi" parameterType="member">
			insert into member values(seq_member_idx.nextVal, #{name}, #{id}, #{pwd}, #{email}, #{addr})
		</insert>
		
		<select id="id_check" resultType="member" parameterType="String">
			select * from member where id=#{id}
		</select>
		
		<delete id="del_member" parameterType="int">
			delete from member where idx=#{idx}
		</delete>
		
		<select id="sel_member" resultType="member" parameterType="int">
			select * from member where idx=#{idx}
		</select>
		
		<update id="member_update" parameterType="member">
			update member set name=#{name}, id=#{id}, pwd=#{pwd}, email=#{email}, addr=#{addr}
 			where idx=#{idx}
		</update>

</mapper>












